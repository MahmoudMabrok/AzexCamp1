<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/layoutPadding">

        <TextView
            android:id="@+id/tvMulNum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/marginTextView"
            android:layout_marginRight="@dimen/marginTextView"
            android:layout_weight="1"
            android:background="@drawable/item1"
            android:gravity="center"
            android:textSize="22sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item2"
            android:text="@string/mul_symbol"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvMulIteration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/item1"
            android:gravity="center"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item2"
            android:text="@string/equal"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvMulResult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/item1"
            android:gravity="center"
            android:textSize="22sp" />

    </LinearLayout>
</android.support.v7.widget.CardView>